# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# TypeScript, JavaScript, JSON files
[*.{ts,tsx,js,jsx,json,cjs,mjs}]
indent_style = space
indent_size = 4

# CSS, SCSS files
[*.{css,scss}]
indent_style = space
indent_size = 4

# HTML files
[*.html]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Package.json
[package.json]
indent_style = space
indent_size = 4
